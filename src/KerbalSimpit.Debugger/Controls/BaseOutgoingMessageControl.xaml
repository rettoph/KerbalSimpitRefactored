<UserControl x:Class="KerbalSimpit.Debugger.Controls.BaseOutgoingMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KerbalSimpit.Debugger.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" Margin="5,5,5,0" Padding="0,0,0,5" x:Name="Border">
        <StackPanel x:Name="InputContainer">
            <Label Content="Title" HorizontalAlignment="Left" x:Name="Title" FontWeight="Bold" />
        </StackPanel>
    </Border>
</UserControl>
