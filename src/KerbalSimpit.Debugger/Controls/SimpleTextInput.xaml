<UserControl x:Class="KerbalSimpit.Debugger.Controls.SimpleTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KerbalSimpit.Debugger.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5,0,5,0">
        <Label Grid.Row="0" Grid.Column="0" x:Name="Label"></Label>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="Value"></TextBox>
    </StackPanel>
</UserControl>
